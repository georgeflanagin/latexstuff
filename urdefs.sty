%**********
% For small inline citations in a drawn box, use
%
%  \quickquote{To be or not to be}{Bill Shakespeare}
%**********
\providecommand{\quickquote}{}
\renewcommand{\quickquote}[2]{
\begin{samepage}
\footnotesize
\begin{framed}
\begin{quote}
\frenchspacing
\emph{#1}
\flushright{#2}
\end{quote}
\end{framed}
\end{samepage}
}

%**********
% This is like quickquote, but the box is half the width of the page,
% on the RHS, and the text wraps it.
%**********
\providecommand{\wrapquote}{}
\renewcommand{\wrapquote}[2]{
\begin{wrapfigure}{r}{0.47\textwidth}
\begin{framed}
\footnotesize
\frenchspacing
\emph{#1}
\flushright{#2}
\normalsize
\end{framed}
\end{wrapfigure}
}

