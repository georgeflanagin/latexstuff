% Put a dark blue rule, 1mm total space, with 0.2mm in the "ink".
\newcommand{\bluerule}{{\color{urblue}{\rule[1mm]{\textwidth}{0.2mm}}}}
% The black rule doesn't quite reach the edges.
\newcommand{\blackrule}{\begin{center}{\color{black}{\rule[1mm]{0.8\textwidth}{0.2mm}}}\end{center}}

% Lower case \ur... headings do not appear in the outline's numbering scheme.
\newcommand{\ursection}[1]{\section*{\color{urblue}{#1}}}
\newcommand{\ursubsection}[1]{\subsection*{\color{urblue}{#1}}}
\newcommand{\ursubsubsection}[1]{\subsubsection*{\color{urblue}{#1}}}

% But upper case \UR... headings **do** appear in the numbering scheme.
\newcommand{\URsection}[1]{\section{\color{urblue}{#1}}}
\newcommand{\URsubsection}[1]{\subsection{\color{urblue}{#1}}}
\newcommand{\URsubsubsection}[1]{\subsubsection{\color{urblue}{#1}}}

